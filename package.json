{
  "name": "myapi-ts",
  "version": "1.0.0",
  "description": "A sample in node using typeScript",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon './dist/index.js' --watch './dist'",
    "start": "npm-run-all clean build --parallel watch:build watch:server --print-label",
    "test": "tsc && mocha dist/**/*.spec.js"
  },
  "author": "Johnnys Martins",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "4.15.3",
    "mysql": "^2.15.0",
    "node-sha1": "^1.0.1",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/mocha": "^5.0.0",
    "@types/mysql": "^2.15.4",
    "@types/node": "^9.6.2",
    "mocha": "3.4.2",
    "supertest": "3.0.0"
  }
}
